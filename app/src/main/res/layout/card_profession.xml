<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/speciality"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/cardProfession_specCardHeght"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/cardProfession_profMarginVert"
        android:layout_marginEnd="@dimen/cardProfession_profLayoutMarginEnd"
        android:layout_marginLeft="@dimen/cardProfession_profBottomMarginLeft"
        android:layout_marginRight="@dimen/cardProfession_profLayoutMarginEnd"
        android:layout_marginStart="@dimen/cardProfession_profBottomMarginLeft"
        android:layout_marginTop="@dimen/cardProfession_profMarginVert"
        android:lineSpacingExtra="@dimen/cardProfession_profLineSpacingExtra"
        android:textSize="@dimen/cardProfession_profTextSize"
        android:textStyle="bold"
        tools:text="@string/cardProfession_profName" />

</android.support.v7.widget.CardView>